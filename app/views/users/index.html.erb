
<h1 align="center">All Alpha Bloggers</h1>


<div align="center">	
	<% @user.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li><%=link_to gravatar_for(user), user_path(user)%></li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
						<li>
							<%= link_to 'Delete User', user_path(user), class: 'btn btn-md btn-success', method: :delete, data: { confirm: 'Are you sure? '} %>
						</li>
				</div>	
			</div>
		</ul>
	<% end %>
</div>
