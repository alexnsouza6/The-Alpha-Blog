<div class="display-article">
    <h1><%= @article.title %></h1>
    <h4><%= @article.description%></h4>
    <div class="display-article__text"><%= @article.text %></div>
    <div class="display-article__author">Author: <%= @article.author %></div>

    <% if logged_in? %>
        <%= link_to "Edit this article", edit_article_path(@article), :class => "display-article__edit" %>
    <% end %>
    <%= link_to "Back to articles listing", articles_path, :class => "display-article__back" %>
</div>
