<div class="article-header">
    <h1>All articles</h1>
    <% if logged_in? %>
        <%= link_to 'Create new article', new_article_path, :class => 'article-header__create' %>
    <% end %>
</div>

<div class="article-container">
    <div class="article-table">
        <% @articles.each do |article| %>
            <div class="article-table__row">
                <div class="article-table__content">
                    <h3 class="article-table__title"><%= article.title %></h3>
                    <div class="article-table__description"><%= article.description %></div>
                </div>
                <div class="article-table__links">
                    <% if logged_in? %>
                    <% if current_user.username == article.author || current_user.admin? %>
                        <%= link_to 'Edit', edit_article_path(article), :class => 'article-table__edit' %>
                    <% end %>
                    <%= link_to 'Show', article_path(article), :class => 'article-table__show' %>
                        <% if current_user.username == article.author || current_user.admin? %>
                            <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}, :class => 'article-table__delete' %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>